{
    "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-config-schema/schema.json",
    "productName": "Stan",
    "version": "0.1.0",
    "identifier": "com.stan.ai",
    "build": {
        "frontendDist": "../src"
    },
    "app": {
        "windows": [
            {
                "title": "Stan",
                "width": 1200,
                "height": 800,
                "minWidth": 800,
                "minHeight": 600,
                "center": true,
                "url": "index.html"
            }
        ],
        "security": {
            "csp": "default-src 'self'; connect-src 'self' http://127.0.0.1:*; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'"
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "externalBin": [
            "binaries/stan"
        ],
        "windows": {
            "nsis": {
                "installMode": "currentUser"
            }
        }
    },
    "plugins": {
        "shell": {
            "sidecar": true,
            "scope": [
                {
                    "name": "binaries/stan",
                    "sidecar": true,
                    "args": true
                }
            ]
        }
    }
}
