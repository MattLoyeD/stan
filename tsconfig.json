{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["resources/js/*"]
        },
        "lib": ["ESNext", "DOM"],
        "types": ["vite/client"],
        "skipLibCheck": true
    },
    "include": ["resources/js/**/*.ts", "resources/js/**/*.vue"],
    "exclude": ["node_modules"]
}
